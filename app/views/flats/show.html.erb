<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @flat.flat_images.each do |image| %>
      <div class="carousel-item">
        <img src=<%= image.url %> class="d-block w-100" alt="image">
      </div>
    <% end %>
  </div>

  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h2 class="my-5"><%= @flat.name %></h2>
      <p id="address"><i class="fas fa-map-marker-alt"></i> <%= @flat.address %>, <%= @flat.city %></p>
      <hr>

      <div class="flat-infos">
        <h4>Property Type</h4>
        <div class="d-flex align-items-center px-3">
          <i class="fas fa-building mr-3"></i>
          <p class="mt-3"><%= @flat.flat_type %></p>
        </div>
      </div>

      <div class="flat-infos">
        <h4>About the property</h4>
        <div class="d-flex align-items-center px-3">
          <i class="fas fa-user-friends mr-3"></i>
          <p class="mt-3"><%= @flat.number_of_guests %></p>
        </div>
        <div class="d-flex align-items-center px-3">
          <i class="fas fa-euro-sign mr-3"></i>
          <p class="mt-3"><%= @flat.price_per_night %> / night</p>
        </div>
        <div class="d-flex align-items-center px-3">
          <i class="fas fa-bed mr-3"></i>
          <p class="mt-3"><%= @flat.single_bed %> single bed(s)</p>
        </div>
        <div class="d-flex align-items-center px-3">
          <i class="fas fa-bed mr-1"></i><i class="fas fa-bed mr-3"></i>
          <p class="mt-3"><%= @flat.double_bed %> double bed(s)</p>
        </div>
        <div class="d-flex align-items-center px-3">
          <p>Bedroom(s) : <%= @flat.bedrooms %></p>
        </div>
        <div class="d-flex align-items-center px-3">
          <p>Bathroom(s) : <%= @flat.bathrooms %></p>
        </div>
      </div>

      <div class="flat-infos">
        <h4>Equipments</h4>
        <div class="d-flex align-items-center px-3 mt-3">
          <p class="mr-5">Kitchen : <%= @flat.kitchen ? "Yes" : "No" %></p>
          <p>Wifi : <%= @flat.wifi ? "Yes" : "No" %></p>
        </div>
        <div class="d-flex align-items-center px-3">
          <p class="mr-5">Television : <%= @flat.television ? "Yes" : "No" %></p>
          <p>Baby bed : <%= @flat.baby_bed ? "Yes" : "No" %></p>
        </div>
        <div class="d-flex align-items-center px-3">
          <p class="mr-5">Park : <%= @flat.park ? "Yes" : "No" %></p>
        </div>
      </div>

      <div class="flat-infos">
        <h4>Host languages</h4>
        <% @flat.host_languages.each do |language| %>
          <ul class="mt-3">
            <li><%= language %></li>
          </ul>
        <% end %>
      </div>    
    </div>


    <div class="col-sm-6 d-flex justify-content-center">
      <div id="map" style="height:800px; width: 600px; margin-top: 75px;"></div>
    </div>

  </div>
</div>
